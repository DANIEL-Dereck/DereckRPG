<Page x:Class="Dereck_RPG.views.MenuAdministration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dereck_RPG.views"
      mc:Ignorable="d" 
      Title="MenuAdministration">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="0">
            <Button x:Name="btnPlanetes" Click="btnPlanetes_Click" Content="Planete"/>
            <Button x:Name="btnRegion" Click="btnRegion_Click" Content="Region"/>
            <Button x:Name="btnDonjon" Click="btnDonjon_Click" Content="Donjon"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="1">
            <Button x:Name="btnEtreVivant" Click="btnEtreVivant_Click" Content="Etre Vivant"/>
            <Button x:Name="btnItem" Click="btnItem_Click" Content="Item"/>
            <Button x:Name="btnQuest" Click="btnQuest_Click" Content="Quest"/>
            <Button x:Name="btnObjectif" Click="btnObjectif_Click" Content="Objectif"/>
        </StackPanel>
    </Grid>
</Page>
