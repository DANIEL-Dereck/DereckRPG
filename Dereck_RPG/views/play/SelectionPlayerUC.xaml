<UserControl x:Class="Dereck_RPG.views.play.SelectionPlayerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UC="clr-namespace:Dereck_RPG.views.usercontrols"
             xmlns:local="clr-namespace:Dereck_RPG.views.play"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel>
                <UC:ListPlayerUC x:Name="ListPlayerUC" Grid.RowSpan="2"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="btnGo" Click="btnGo_Click" Content="Go !!!"/>
            <Button Grid.Column="1" x:Name="btnQuit" Click="btnQuit_Click" Content="Quit"/>
        </Grid>
    </Grid>

</UserControl>
