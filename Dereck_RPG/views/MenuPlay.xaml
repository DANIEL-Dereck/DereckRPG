<Page x:Class="Dereck_RPG.views.MenuPlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UC="clr-namespace:Dereck_RPG.views.usercontrols"
      xmlns:local="clr-namespace:Dereck_RPG.views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MenuPlay">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition  Height="4*"/>
                    </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Planete"/>
            <UC:ListPlaneteUC Grid.Row="1" Grid.Column="0" x:Name="ListPlaneteUC"/>
            
            <Label Grid.Row="0" Grid.Column="1" Content="Region"/>
            <UC:ListRegionUC Grid.Row="1" Grid.Column="1" x:Name="ListRegionUC"/>
            
            <Label Grid.Row="0" Grid.Column="2" Content="Donjon"/>
            <UC:ListDonjonUC Grid.Row="1" Grid.Column="2" x:Name="ListDonjonUC"/>

            <Label Grid.Row="0" Grid.Column="3" Content="Player"/>
            <UC:ListPlayerUC Grid.Row="1" Grid.Column="3" x:Name="ListPlayerUC"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="btnGo" Click="btnGo_Click" Content="Go !!!"/>
            <Button Grid.Column="1" x:Name="btnQuit" Click="btnQuit_Click" Content="Quit"/>
        </Grid>
    </Grid>
</Page>
